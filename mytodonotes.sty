\usepackage{todonotes}
\usepackage{color}

\newcommand{\sidenote}[3]{\todo[linecolor=#1,backgroundcolor=#1!25,bordercolor=#1]{\tiny\textbf{#2:} #3}}
\newcommand{\note}[3]{\todo[inline,linecolor=#1,backgroundcolor=#1!25,bordercolor=#1]{\textbf{#2:} #3}}

\newcommand{\malanote}[1]{\note{green}{Mala}{#1}}
\newcommand{\malasidenote}[1]{\sidenote{green}{Mala}{#1}}
\newcommand{\allnote}[1]{\note{blue}{All}{#1}}
\newcommand{\allsidenote}[1]{\sidenote{blue}{All}{#1}}
\newcommand{\totanote}[1]{\note{magenta}{Tota}{#1}}
\newcommand{\totasidenote}[1]{\sidenote{magenta}{Tota}{#1}}

\newcommand{\missingref}[1][{add some ref here}]{\sidenote{orange}{TODO}{#1}}